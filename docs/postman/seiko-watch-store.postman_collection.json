{
  "info": {
    "name": "Seiko Watch Store API",
    "description": "REST API collection for the Seiko Watch Store e-commerce platform.\n\n**Base URL:** `{{baseUrl}}`\n\n**Auth:** After logging in, copy the `token` from the response and set it as `{{token}}` in your environment. Admin endpoints require an admin-account token set as `{{adminToken}}`.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Returns `{ status: 'ok' }` if the server is running."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Watches",
      "item": [
        {
          "name": "Get All Watches",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/watches",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "watches"]
            },
            "description": "Returns all watches ordered by watch_id DESC."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "register"]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"full_name\": \"Test User\",\n  \"password\": \"password123\",\n  \"phone\": \"+90 555 000 00 00\",\n  \"address\": \"Test Street 1\",\n  \"city\": \"Istanbul\",\n  \"country\": \"Turkey\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "description": "Register a new customer. Returns a JWT token and customer info."
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const data = pm.response.json();",
                  "if (data.token) {",
                  "  pm.environment.set('token', data.token);",
                  "  console.log('Token saved to environment');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "login"]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "description": "Login and receive a JWT token. **The test script auto-saves the token to `{{token}}`.**"
          },
          "response": []
        },
        {
          "name": "Get Current User (me)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "me"]
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "description": "Decode the current JWT and return customer_id + email."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/v1/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "orders"]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}", "description": "Optional — anonymous checkout allowed" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    { \"watch_id\": 1, \"quantity\": 1, \"unit_price\": 299.99 }\n  ],\n  \"shipping_address\": \"Test Street 1, Istanbul\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "description": "Create a new order. Auth is optional — anonymous checkout is supported."
          },
          "response": []
        },
        {
          "name": "Get My Orders",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/orders/my",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "orders", "my"]
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "description": "Get all orders for the authenticated customer."
          },
          "response": []
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "orders", "{{orderId}}"]
            },
            "description": "Get a single order with its items."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get All Orders (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "orders"]
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "description": "Get all orders with customer info and item details. Requires admin JWT."
          },
          "response": []
        },
        {
          "name": "Update Order Status (Admin)",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/orders/{{orderId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "orders", "{{orderId}}", "status"]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"processing\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "description": "Update an order's status. Allowed values: `pending`, `processing`, `shipped`, `delivered`, `cancelled`."
          },
          "response": []
        },
        {
          "name": "Get All Watches (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/watches",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "watches"]
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "description": "Get all watches ordered by name. Requires admin JWT."
          },
          "response": []
        },
        {
          "name": "Update Watch Stock (Admin)",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/watches/{{watchId}}/stock",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "watches", "{{watchId}}", "stock"]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"stock_quantity\": 10\n}",
              "options": { "raw": { "language": "json" } }
            },
            "description": "Update stock quantity for a watch. Minimum value: 0."
          },
          "response": []
        },
        {
          "name": "Get Dashboard Stats (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "admin", "stats"]
            },
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "description": "Get aggregated stats: total orders, pending orders, total customers, revenue, watch count, low-stock count."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Stripe",
      "item": [
        {
          "name": "Create Payment Intent",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/create-payment-intent",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "create-payment-intent"]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 299.99,\n  \"order_id\": 1,\n  \"currency\": \"usd\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "description": "Create a Stripe PaymentIntent. Returns `clientSecret` to use in the frontend Stripe.js flow."
          },
          "response": []
        },
        {
          "name": "Webhook (Stripe)",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/webhook",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "webhook"]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "stripe-signature", "value": "{{stripeWebhookSig}}", "description": "Generated by Stripe — use Stripe CLI for local testing" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}",
              "options": { "raw": { "language": "json" } }
            },
            "description": "Stripe webhook receiver. In production this is called by Stripe. For local testing use: `stripe listen --forward-to localhost:5001/api/v1/stripe/webhook`."
          },
          "response": []
        },
        {
          "name": "Confirm Order",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/confirm-order",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "confirm-order"]
            },
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"payment_intent_id\": \"pi_xxx\",\n  \"order_id\": 1\n}",
              "options": { "raw": { "language": "json" } }
            },
            "description": "Confirm an order after successful payment. Verifies the PaymentIntent status is `succeeded` then marks the order as `processing`."
          },
          "response": []
        }
      ]
    }
  ]
}
